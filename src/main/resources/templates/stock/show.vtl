<h2 class="pageHeader">Product Details</h2>

<div class="product-details">

<img class="image" src="$stockItem.getImage()">


    <p>Brand: $stockItem.getBrand()</p>
    <p>Price: Â£ $stockItem.getPrice()</p>
    <p>Quantity: $stockItem.checkAvailability()</p>
    <p>Product: $stockItem.getProductType()</p>


</div>



<form action="/products/$stockItem.getId()/edit" method="get">
<input type="submit" value="Edit" class="button center">
</form>



<form action="/products/$stockItem.getId()/delete" method="post">
<input type="submit" value="Delete" class="button center">
</form>


<form action="/products" method="get">
<input type="submit" value="Back to product list" class="button center">
</form>

